{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "buyerEmail": {
      "type": "string",
      "format": "email"
    },
    "buyerName": {
      "type": "string"
    },
    "buyerPhoneNumber": {
      "type": "string",
      "pattern": "^\\+"
    },
    "buyerCartDetails": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "quantity": {
            "type": "number",
            "minimum": 1
          },
          "size": {
            "type": "string"
          }
        },
        "required": ["quantity"],
        "additionalProperties": false
      }
    },
    "buyerAgreements": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "documentName": {
            "type": "string"
          },
          "documentVersion": {
            "type": "string"
          },
          "acceptanceTimestamp": {
            "type": "string",
            "format": "date-time"
          },
          "acceptanceIP": {
            "type": "string",
            "format": "ipv4"
          },
          "acceptanceDeviceDetails": {
            "type": "object"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "required": ["buyerEmail", "buyerAgreements"],
  "additionalProperties": false
}
