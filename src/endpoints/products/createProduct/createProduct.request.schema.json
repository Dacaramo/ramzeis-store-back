{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200
    },
    "slides": {
      "type": "array",
      "minItems": 1,
      "maxItems": 3,
      "items": {
        "type": "object",
        "properties": {
          "productSlide": {
            "type": "string",
            "format": "uri"
          },
          "effectSlide": {
            "type": "string",
            "format": "uri"
          }
        },
        "required": ["productSlide", "effectSlide"],
        "additionalProperties": false
      }
    },
    "details": {
      "type": "array",
      "minItems": 2,
      "maxItems": 8,
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "minLength": 1,
            "maxLength": 200
          },
          "description": {
            "type": "string",
            "minLength": 1,
            "maxLength": 2000
          },
          "image": {
            "type": "string",
            "format": "uri"
          }
        },
        "required": ["title", "description", "image"],
        "additionalProperties": false
      }
    },
    "previewImages": {
      "type": "array",
      "minItems": 2,
      "maxItems": 2,
      "items": {
        "type": "string",
        "format": "uri"
      }
    },
    "colorId": {
      "type": "string"
    },
    "price": {
      "type": "number",
      "minimum": 1000,
      "maximum": 50000
    },
    "isVisible": {
      "type": "boolean"
    },
    "availableSizes": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 2
    },
    "categoryId": {
      "type": "string"
    },
    "subcategoryId": {
      "type": "string"
    },
    "stock": {
      "type": "integer",
      "minimum": -1
    },
    "supportedLocales": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "format": "regex",
        "pattern": "^[a-z]{2}(-[A-Z]{2})?$"
      }
    },
    "isForDropshipping": {
      "type": "boolean"
    }
  },
  "required": [
    "name",
    "slides",
    "details",
    "previewImages",
    "colorId",
    "price",
    "isVisible",
    "categoryId",
    "subcategoryId",
    "stock",
    "supportedLocales",
    "isForDropshipping"
  ]
}
