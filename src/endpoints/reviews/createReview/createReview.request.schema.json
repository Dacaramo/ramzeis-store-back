{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "reviewTitle": {
      "type": "string",
      "maxLength": 200
    },
    "reviewDescription": {
      "type": "string",
      "maxLength": 2000
    },
    "reviewScore": {
      "type": "number",
      "minimum": 1,
      "maximum": 5
    },
    "reviewDate": {
      "type": "string",
      "format": "date-time"
    },
    "reviewImages": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "maxItems": 5
    },
    "reviewBuyerId": {
      "type": "string",
      "pattern": "^buyer\\|",
      "minLength": 6
    }
  },
  "required": [
    "reviewTitle",
    "reviewDescription",
    "reviewScore",
    "reviewDate",
    "reviewBuyerId"
  ]
}
